{
  "manifest_version": 2,

  "name": "JSRecorder",
  "description": "This extension allows the user to validate the xpathselector.",
  "version": "1.0",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["vendor/jquery.min.js" "js/content.js"]
  }],
  "background": {
    "scripts": ["vendor/jquery.min.js","js/background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "dummy_default_popup": "html/popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ]
}
